{
  "compilerOptions": {
    "target": "ES2020", // Compatibilidad moderna
    "module": "CommonJS", // Necesario para Node.js
    "rootDir": "./src", // Carpeta de entrada
    "outDir": "./dist", // Carpeta de salida
    "strict": true, // Activar comprobaciones estrictas
    "esModuleInterop": true, // Para importar paquetes como axios, dotenv
    "forceConsistentCasingInFileNames": true, // Evita errores por mayúsculas/minúsculas
    "skipLibCheck": true // Evita chequeo de tipos en dependencias
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
